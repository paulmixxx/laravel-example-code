<?xml version="1.0"?>
<ruleset name="Coding standard">
    <arg value="p"/>
    <arg value="n"/>
    <arg name="colors"/>
    <arg name="cache" value="var/.phpcs.json"/>
    <arg name="extensions" value="php" />

    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>vendor/</exclude-pattern>

    <rule ref="PSR1"/>
    <rule ref="PSR12"/>

    <file>./app/</file>
    <file>./bootstrap/</file>
    <file>./config/</file>
    <file>./core/</file>
    <file>./public/</file>
    <file>./routes/</file>
    <file>./tests/</file>
</ruleset>